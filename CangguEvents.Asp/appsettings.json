{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Verbose"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            },
            {
              "Name": "File",
              "Args": {
                "path": "logs/myapp.log",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Debug"
              }
            }
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "EventDb": "DataSource=app.db"
  },
  "AllowedHosts": "*"
}

